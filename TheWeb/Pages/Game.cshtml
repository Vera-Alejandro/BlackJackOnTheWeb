@page
@model TheWeb.Pages.GameModel
@{ }

<div class="container bg-black">
    <div class="row">
        <div class="col">
            <img src="https://alejandropersonalstorage.blob.core.windows.net/public-images/BackJack%20Title.png"
                 alt="Blackjack Logo" />
        </div>

        <div class="col justify-content-center">
            <h5 class="text-white text-uppercase"><u>Dealer</u></h5>
            <h6 class="text-white">Score: @Model.DealerScore</h6>
        </div>

        <div class="col justify-content-center">
            <h5 class="text-white text-uppercase"><u>Player</u></h5>
            <h6 class="text-white">Score: @Model.PlayerScore</h6>
            <h6 class="text-white">Cash: @Model.PlayerCash</h6>
        </div>
    </div>
    <div class="row py-3">
        <div id="DealerCardPanel" class="col">
            <img src="https://alejandropersonalstorage.blob.core.windows.net/public-images/Card Back.png" alt="">
        </div>
        <div id="PlayerCardPanel" class="col">
            <img src="https://alejandropersonalstorage.blob.core.windows.net/public-images/Card Back.png" alt="">
        </div>
    </div>
    <div class="row py-3">
        <div class="col-6">
            <div class="row">
                <h4 class="text-white px-4">Bet</h4>
                <input type="number" class="form-control w-50" id="BetAmount" placeholder="Current Bet" value="0" min="1" max="1000" required>
            </div>
        </div>
        <div class="col-6 ml-0">
            <button class="btn btn-outline-light w-35 mx-2" id="HitButton">Hit</button>
            <button class="btn btn-outline-light w-35 mx-2" id="StayButton">Stay</button>
        </div>
    </div>
</div>